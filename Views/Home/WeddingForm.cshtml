@using WeddingPlanner.Models
@model Wedding
<a href="/logout"><u>Logout</u></a>
<a href="/Dashboard"><u>Dashboard</u></a>
<div>
    <form asp-action="CreateWedding" asp-controller="Home" method="post">
        <span asp-validation-for="WedderOne" class="text-danger"></span>
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne">

        <span asp-validation-for="WedderTwo" class="text-danger"></span>
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo">

        <span asp-validation-for="WeddingDate" class="text-danger"></span>
        <label asp-for="WeddingDate"></label>
        <input type="date" asp-for="WeddingDate">

        <span asp-validation-for="Address" class="text-danger"></span>
        <label asp-for="Address"></label>
        <input asp-for="Address">
        <input type = "hidden" asp-for="UserId" value = "@ViewBag.Planner">
        <button>Create Wedding</button>
    </form>
</div>